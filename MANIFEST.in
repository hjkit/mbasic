# Include documentation
include README.md
include INSTALL.md
include LICENSE

# Include requirements file
include requirements.txt

# Include documentation directory
recursive-include doc *.md

# Include example BASIC programs
recursive-include basic *.bas *.BAS

# Exclude test and utility files from distribution
exclude tests/*
exclude utils/*
exclude .gitignore

# Exclude compiled Python files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
